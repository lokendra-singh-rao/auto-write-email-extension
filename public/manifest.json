{
  "manifest_version": 3,
  "name": "Auto Write",
  "version": "0.0.1",
  "description": "Chrome extension to give AI email replies",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Extension"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  }
}
